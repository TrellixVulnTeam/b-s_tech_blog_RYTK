<!-- Loop over each object in the blogs array -->
{{#each blog as |blog| }}
<div class="row align-cent mb-5">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="Main/views/homepage.handlebars"</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.contents}}
    </p>
  </div>
</div>
{{/each}}
